<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/featureFlagView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/featureFlag2View"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/featureFlagView"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/featureFlag3View"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/featureFlag2View"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/featureFlag4View"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/featureFlag3View"
        android:paddingTop="20dp" />


    <TextView
        android:id="@+id/stringOptions1View"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/featureFlag4View"
        android:paddingTop="20dp" />

    <TextView
        android:id="@+id/stringOptions2View"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/stringOptions1View"
        android:paddingTop="20dp" />

</RelativeLayout>
